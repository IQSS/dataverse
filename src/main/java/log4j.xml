<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration>
    <appender name="usage" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${com.sun.aas.instanceRoot}/logs/usage/usage.log"/>
        <param name="datePattern" value="'.'yyyy-MM-dd"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %5p [%c] %m%n"/>
        </layout>
    </appender>
    <appender name="stdout" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%5p [%t] (%F:%L) - %m%n"/>
        </layout>
    </appender>
    <appender name="stderr" class="org.apache.log4j.ConsoleAppender">
        <param name="target" value="System.err"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%5p [%t] (%F:%L) - %m%n"/>
        </layout>
    </appender>
    
    <logger name="org.atmosphere" additivity="true">       
        <level value ="FATAL"/>     
    </logger>
    <logger name="edu.harvard.iq.dataverse.usage.UsageIndexServiceBean" 
            additivity="false">       
        <level value ="INFO"/>     
        <appender-ref ref="usage"/>
    </logger>
    <root>
        <level value ="FATAL" />
        <appender-ref ref="stderr"/>
    </root>
</log4j:configuration>