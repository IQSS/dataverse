<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
              version="2.2">
    <render-kit>
        <renderer>
            <component-family>org.primefaces.component</component-family>
            <renderer-type>org.primefaces.component.FileUploadRenderer</renderer-type>
            <renderer-class>edu.harvard.iq.dataverse.FileUploadRenderer</renderer-class>
        </renderer>
    </render-kit>
    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>zh_CN</supported-locale>            
        </locale-config>        
    </application>
    <lifecycle>
         <phase-listener>
            edu.harvard.iq.dataverse.MyPhaseListener
         </phase-listener>
    </lifecycle>
    <managed-bean>
         <managed-bean-name>languageSelectorBean</managed-bean-name>
         <managed-bean-class>
            edu.harvard.iq.dataverse.LanguageSelectorBean
         </managed-bean-class>
         <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
</faces-config>