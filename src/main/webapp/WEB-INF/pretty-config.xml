<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.3.0" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.3.0 http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.3.0.xsd">

    <url-mapping id="dataverse">
        <pattern value="/dataverse/#{alias}" />
        <view-id value="/dataverse.xhtml" />
    </url-mapping>
    
    <url-mapping id="iframe">
        <pattern value="/iframe/#{alias}" />
        <view-id value="/iframe.xhtml" />
    </url-mapping>    
        
    <url-mapping id="advancedSearch">
        <pattern value="/dataverse/#{dataverseIdentifier}/search" />
        <view-id value="/search/advanced.xhtml" />
    </url-mapping>

    <url-mapping id="sitemap">
        <pattern value="/sitemap.xml" />
        <view-id value="/sitemap/sitemap.xml" />
    </url-mapping>

</pretty-config>