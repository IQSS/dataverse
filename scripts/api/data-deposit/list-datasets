#!/bin/bash
USERNAME=pete
PASSWORD=pete
DVN_SERVER=localhost:8181
if [ -z "$1" ]; then
  DATAVERSE_ALIAS=peteTop
  #DATAVERSE_ALIAS=root
else
  DATAVERSE_ALIAS=$1
fi
curl --insecure -s https://$USERNAME:$PASSWORD@$DVN_SERVER/dvn/api/data-deposit/v1/swordv2/collection/dataverse/$DATAVERSE_ALIAS \
| xmllint -format -
